<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/console_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/floaty_console_title_bg"
            android:orientation="horizontal"

            android:layout_height="30dp">
            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:maxLines="1"
                android:text="@string/text_console"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/console_clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:scaleType="center"
                android:src="@drawable/clean_button"/>

            <ImageView
                android:id="@+id/console_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:scaleType="center"
                android:src="@drawable/close_button"/>
        </LinearLayout>
        <TextView
            android:id="@+id/console_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:background="@color/black"
            android:textColor="@color/ghostwhite"
            android:textSize="9dp"
            />
    </LinearLayout>
</RelativeLayout>
